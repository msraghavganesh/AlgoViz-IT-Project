<% include ../partials/forumheader %>

  <body class="overflow-auto">
    <section id="browse_question">
      <div class="container my-4">
        <div class="row">
          <div class="card col p-2">
            <div class="card-body px-4">
              <h5 class="card-title text-capitalize">
                <%=post.title%>
              </h5>
              <p class="text-muted">
                <%=post.content %>
              </p>
              <p class="text-muted" style="float: right;">
                <i class="fa fa-user"></i>
                <small class="text-capitalize bold">
                  <%=post.author.username %>
                </small>
                <br>
                <i class="fa fa-tag"></i>
                <small class="text-capitalize px-1 rounded border border-success">
                  <%=post.algorithm %>
                </small>
              </p>
            </div>
            <% comments.forEach(comment=> { %>
              <!-- <div class="row"> -->
              <div class="card col p-0">
                <div class="card-body px-4">
                  <p class="text-muted">
                    <%=comment.comment %>
                  </p>
                  <p class="text-muted" style="float: right;">
                    <i class="fa fa-user"></i>
                    <small class="text-capitalize bold">
                      <%=comment.author.username %>
                    </small>
                  </p>
                </div>
              </div>
              <% })%>
          </div>
        </div>
      </div>
    </section>
    <section>
      <div class="container my-4">
        <div class="row">
          <div class="card col">
            <div class="card-block py-1 accordion">
              <form class="accordion-item p-3" action="/forum/addComment" method="POST">
                <div class="form-group">
                  <label class="form-control-label">Comment</label>
                  <textarea name="post[comment]" cols="30" rows="5" class="form-control"></textarea>
                </div>
                <div class="form-group">
                  <input type="hidden" name="post[postId]" value=<%=post.id %> />
                </div>
                <button type="submit" class="btn btn-outline-primary" style="float: right;">Submit
                  Comment</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
  <% include ../partials/footer %>